<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<VBox maxHeight="600.0" maxWidth="1000.0" spacing="15.0" style="-fx-background-color: #f5f7fa;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="main.controllers.VendasController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
   <children>
      <HBox alignment="CENTER_LEFT" spacing="15.0">
         <children>
            <Text fill="#2c5282" strokeType="OUTSIDE" strokeWidth="0.0" text="Frente de Caixa">
               <font>
                  <Font name="Segoe UI" size="18.0" />
               </font>
            </Text>
         </children>
      </HBox>
      <HBox spacing="15.0" VBox.vgrow="ALWAYS">
         <children>
            <VBox spacing="12.0" style="-fx-background-color: white; -fx-border-color: #d0d0d0; -fx-border-width: 1;" HBox.hgrow="ALWAYS">
               <padding>
                  <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
               </padding>
               <children>
                  <Label style="-fx-text-fill: #2c5282;" text="Adicionar Produto">
                     <font>
                        <Font name="Segoe UI Semibold" size="13.0" />
                     </font>
                  </Label>
                  <HBox alignment="CENTER_LEFT" spacing="10.0">
                     <children>
                        <VBox spacing="5.0" HBox.hgrow="ALWAYS">
                           <children>
                              <Label style="-fx-text-fill: #666;" text="Código de Barras:">
                                 <font>
                                    <Font name="Segoe UI" size="11.0" />
                                 </font>
                              </Label>
                              <TextField fx:id="txtCodigoBarras" promptText="Digite ou escaneie o código" style="-fx-background-color: white; -fx-border-color: #d0d0d0; -fx-border-width: 1; -fx-padding: 6;" />
                           </children>
                        </VBox>
                        <VBox spacing="5.0" prefWidth="100.0">
                           <children>
                              <Label style="-fx-text-fill: #666;" text="Quantidade:">
                                 <font>
                                    <Font name="Segoe UI" size="11.0" />
                                 </font>
                              </Label>
                              <TextField fx:id="txtQuantidade" text="1" style="-fx-background-color: white; -fx-border-color: #d0d0d0; -fx-border-width: 1; -fx-padding: 6;" />
                           </children>
                        </VBox>
                        <VBox alignment="BOTTOM_CENTER">
                           <children>
                              <Button fx:id="btnAdicionar" mnemonicParsing="false" onAction="#handleAdicionar" prefHeight="32.0" prefWidth="90.0" style="-fx-background-color: #5a9fd4; -fx-text-fill: white; -fx-cursor: hand; -fx-font-size: 12;" text="Adicionar" />
                           </children>
                        </VBox>
                     </children>
                  </HBox>
                  <Separator prefWidth="200.0" />
                  <Label style="-fx-text-fill: #2c5282;" text="Itens da Venda">
                     <font>
                        <Font name="Segoe UI Semibold" size="13.0" />
                     </font>
                  </Label>
                  <TableView fx:id="tableItens" style="-fx-background-color: white; -fx-border-width: 0;" VBox.vgrow="ALWAYS">
                    <columns>
                      <TableColumn fx:id="colCodigo" prefWidth="80.0" text="Código" />
                      <TableColumn fx:id="colDescricao" prefWidth="250.0" text="Descrição" />
                        <TableColumn fx:id="colQuantidade" prefWidth="80.0" style="-fx-alignment: CENTER;" text="Qtd" />
                        <TableColumn fx:id="colPrecoUnit" prefWidth="90.0" style="-fx-alignment: CENTER_RIGHT;" text="Preço Unit." />
                        <TableColumn fx:id="colTotal" prefWidth="90.0" style="-fx-alignment: CENTER_RIGHT;" text="Total" />
                    </columns>
                  </TableView>
                  <HBox alignment="CENTER_LEFT" spacing="10.0">
                     <children>
                        <Button fx:id="btnRemoverItem" mnemonicParsing="false" onAction="#handleRemoverItem" prefHeight="28.0" prefWidth="100.0" style="-fx-background-color: #e57373; -fx-text-fill: white; -fx-cursor: hand; -fx-font-size: 11;" text="Remover Item" />
                        <Button fx:id="btnLimparVenda" mnemonicParsing="false" onAction="#handleLimparVenda" prefHeight="28.0" prefWidth="100.0" style="-fx-background-color: #999; -fx-text-fill: white; -fx-cursor: hand; -fx-font-size: 11;" text="Limpar Venda" />
                     </children>
                  </HBox>
               </children>
            </VBox>
            <VBox prefWidth="280.0" spacing="12.0" style="-fx-background-color: white; -fx-border-color: #d0d0d0; -fx-border-width: 1;">
               <padding>
                  <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
               </padding>
               <children>
                  <Label style="-fx-text-fill: #2c5282;" text="Resumo da Venda">
                     <font>
                        <Font name="Segoe UI Semibold" size="13.0" />
                     </font>
                  </Label>
                  <VBox spacing="8.0" style="-fx-background-color: #f9f9f9; -fx-padding: 12;">
                     <children>
                        <HBox alignment="CENTER_LEFT">
                           <children>
                              <Label style="-fx-text-fill: #666;" text="Subtotal:">
                                 <font>
                                    <Font name="Segoe UI" size="12.0" />
                                 </font>
                              </Label>
                              <Region HBox.hgrow="ALWAYS" />
                              <Label fx:id="lblSubtotal" style="-fx-text-fill: #2c5282;" text="R$ 0,00">
                                 <font>
                                    <Font name="Segoe UI" size="12.0" />
                                 </font>
                              </Label>
                           </children>
                        </HBox>
                        <HBox alignment="CENTER_LEFT">
                           <children>
                              <Label style="-fx-text-fill: #666;" text="Desconto:">
                                 <font>
                                    <Font name="Segoe UI" size="12.0" />
                                 </font>
                              </Label>
                              <Region HBox.hgrow="ALWAYS" />
                              <Label fx:id="lblDesconto" style="-fx-text-fill: #e57373;" text="R$ 0,00">
                                 <font>
                                    <Font name="Segoe UI" size="12.0" />
                                 </font>
                              </Label>
                           </children>
                        </HBox>
                        <Separator prefWidth="200.0" />
                        <HBox alignment="CENTER_LEFT">
                           <children>
                              <Label style="-fx-text-fill: #2c5282;" text="TOTAL:">
                                 <font>
                                    <Font name="Segoe UI Bold" size="14.0" />
                                 </font>
                              </Label>
                              <Region HBox.hgrow="ALWAYS" />
                              <Label fx:id="lblTotal" style="-fx-text-fill: #2c5282;" text="R$ 0,00">
                                 <font>
                                    <Font name="Segoe UI Bold" size="16.0" />
                                 </font>
                              </Label>
                           </children>
                        </HBox>
                     </children>
                  </VBox>
                  <VBox spacing="8.0">
                     <children>
                        <Label style="-fx-text-fill: #666;" text="Forma de Pagamento:">
                           <font>
                              <Font name="Segoe UI" size="11.0" />
                           </font>
                        </Label>
                        <ComboBox fx:id="cbFormaPagamento" prefWidth="150.0" promptText="Selecione" style="-fx-background-color: white; -fx-border-color: #d0d0d0; -fx-border-width: 1;" />
                     </children>
                  </VBox>
                  <VBox spacing="8.0">
                     <children>
                        <Label style="-fx-text-fill: #666;" text="Cliente (Opcional):">
                           <font>
                              <Font name="Segoe UI" size="11.0" />
                           </font>
                        </Label>
                        <ComboBox fx:id="cbCliente" prefWidth="150.0" promptText="Selecione" style="-fx-background-color: white; -fx-border-color: #d0d0d0; -fx-border-width: 1;" />
                     </children>
                  </VBox>
                  <Region VBox.vgrow="ALWAYS" />
                  <Button fx:id="btnFinalizarVenda" mnemonicParsing="false" onAction="#handleFinalizarVenda" prefHeight="45.0" prefWidth="250.0" style="-fx-background-color: #7cb342; -fx-text-fill: white; -fx-cursor: hand; -fx-font-size: 14;" text="Finalizar Venda">
                     <font>
                        <Font name="Segoe UI Bold" size="14.0" />
                     </font>
                  </Button>
                  <Button fx:id="btnCancelarVenda" mnemonicParsing="false" onAction="#handleCancelarVenda" prefHeight="32.0" prefWidth="250.0" style="-fx-background-color: #e57373; -fx-text-fill: white; -fx-cursor: hand; -fx-font-size: 12;" text="Cancelar Venda" />
               </children>
            </VBox>
         </children>
      </HBox>
      <HBox alignment="CENTER_LEFT" spacing="10.0" style="-fx-background-color: #e8e8e8; -fx-padding: 10; -fx-border-color: #d0d0d0; -fx-border-width: 1 0 0 0;">
         <children>
            <Label fx:id="lblVendaAtual" style="-fx-text-fill: #666;" text="Venda #0001">
               <font>
                  <Font name="Segoe UI" size="11.0" />
               </font>
            </Label>
            <Region HBox.hgrow="ALWAYS" />
            <Label fx:id="lblOperador" style="-fx-text-fill: #666;" text="Operador: Admin">
               <font>
                  <Font name="Segoe UI" size="11.0" />
               </font>
            </Label>
         </children>
      </HBox>
   </children>
</VBox>