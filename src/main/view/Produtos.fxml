<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<VBox maxHeight="600.0" maxWidth="1000.0" spacing="15.0" style="-fx-background-color: #f5f7fa;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="main.controllers.ProdutosController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
   <children>
      <HBox alignment="CENTER_LEFT" spacing="15.0">
         <children>
            <Text fill="#2c5282" strokeType="OUTSIDE" strokeWidth="0.0" text="Gerenciamento de Produtos">
               <font>
                  <Font name="Segoe UI" size="18.0" />
               </font>
            </Text>
            <Region HBox.hgrow="ALWAYS" />
            <HBox alignment="CENTER_LEFT" maxWidth="400.0" spacing="8.0" style="-fx-background-color: white; -fx-border-color: #d0d0d0; -fx-border-width: 1; -fx-padding: 5 10;" HBox.hgrow="ALWAYS">
               <children>
                  <Label style="-fx-text-fill: #888;" text="🔍" />
                  <TextField fx:id="searchField" promptText="Pesquisar..." style="-fx-background-color: transparent; -fx-border-width: 0;" HBox.hgrow="ALWAYS" />
               </children>
            </HBox>
         </children>
      </HBox>
      <VBox style="-fx-background-color: white; -fx-border-color: #d0d0d0; -fx-border-width: 1;" VBox.vgrow="ALWAYS">
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
         <children>
            <TableView fx:id="tableProdutos" style="-fx-background-color: white; -fx-border-width: 0;" VBox.vgrow="ALWAYS">
              <columns>
                <TableColumn fx:id="colId" prefWidth="50.0" style="-fx-alignment: CENTER;" text="ID" />
                <TableColumn fx:id="colCodigo" prefWidth="100.0" style="-fx-alignment: CENTER;" text="Código" />
                  <TableColumn fx:id="colNome" prefWidth="220.0" text="Nome do Produto" />
                  <TableColumn fx:id="colCategoria" prefWidth="110.0" text="Categoria" />
                  <TableColumn fx:id="colPreco" prefWidth="90.0" style="-fx-alignment: CENTER_RIGHT;" text="Preço" />
                  <TableColumn fx:id="colEstoque" prefWidth="70.0" style="-fx-alignment: CENTER;" text="Estoque" />
                  <TableColumn fx:id="colFornecedor" prefWidth="200.0" text="Fornecedor" />
              </columns>
            </TableView>
         </children>
      </VBox>
      <HBox alignment="CENTER_LEFT" spacing="10.0" style="-fx-background-color: #e8e8e8; -fx-padding: 10; -fx-border-color: #d0d0d0; -fx-border-width: 1 0 0 0;">
         <children>
            <Button fx:id="btnNovo" mnemonicParsing="false" onAction="#handleNovo" prefHeight="30.0" prefWidth="90.0" style="-fx-background-color: #5a9fd4; -fx-text-fill: white; -fx-cursor: hand; -fx-font-size: 12;" text="Novo" />
            <Button fx:id="btnEditar" mnemonicParsing="false" onAction="#handleEditar" prefHeight="30.0" prefWidth="90.0" style="-fx-background-color: #7cb342; -fx-text-fill: white; -fx-cursor: hand; -fx-font-size: 12;" text="Editar" />
            <Button fx:id="btnExcluir" mnemonicParsing="false" onAction="#handleExcluir" prefHeight="30.0" prefWidth="90.0" style="-fx-background-color: #e57373; -fx-text-fill: white; -fx-cursor: hand; -fx-font-size: 12;" text="Excluir" />
            <Region HBox.hgrow="ALWAYS" />
            <Label fx:id="lblTotal" style="-fx-text-fill: #666;" text="Total: 0 registros">
               <font>
                  <Font name="Segoe UI" size="11.0" />
               </font>
            </Label>
         </children>
      </HBox>
      <VBox fx:id="formContainer" managed="false" spacing="15.0" style="-fx-background-color: white; -fx-border-color: #5a9fd4; -fx-border-width: 2;" visible="false">
         <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
         </padding>
         <children>
            <HBox alignment="CENTER_LEFT" style="-fx-background-color: #5a9fd4; -fx-padding: 8;">
               <children>
                  <Text fx:id="lblFormTitle" fill="WHITE" strokeType="OUTSIDE" strokeWidth="0.0" text="Cadastro de Produto">
                     <font>
                        <Font name="Segoe UI" size="14.0" />
                     </font>
                  </Text>
               </children>
               <VBox.margin>
                  <Insets bottom="10.0" />
               </VBox.margin>
            </HBox>
            <VBox spacing="5.0">
               <children>
                  <Label style="-fx-text-fill: #333;" text="Código de Barras:">
                     <font>
                        <Font name="Segoe UI" size="11.0" />
                     </font>
                  </Label>
                  <TextField fx:id="txtCodigo" style="-fx-background-color: white; -fx-border-color: #d0d0d0; -fx-border-width: 1; -fx-padding: 6;" />
               </children>
            </VBox>
            <VBox spacing="5.0">
               <children>
                  <Label style="-fx-text-fill: #333;" text="Nome do Produto:">
                     <font>
                        <Font name="Segoe UI" size="11.0" />
                     </font>
                  </Label>
                  <TextField fx:id="txtNome" style="-fx-background-color: white; -fx-border-color: #d0d0d0; -fx-border-width: 1; -fx-padding: 6;" />
               </children>
            </VBox>
            <VBox spacing="5.0">
               <children>
                  <Label style="-fx-text-fill: #333;" text="Categoria:">
                     <font>
                        <Font name="Segoe UI" size="11.0" />
                     </font>
                  </Label>
                  <ComboBox fx:id="cbCategoria" prefWidth="150.0" style="-fx-background-color: white; -fx-border-color: #d0d0d0; -fx-border-width: 1;" />
               </children>
            </VBox>
            <VBox spacing="5.0">
               <children>
                  <Label style="-fx-text-fill: #333;" text="Preço (R$):">
                     <font>
                        <Font name="Segoe UI" size="11.0" />
                     </font>
                  </Label>
                  <TextField fx:id="txtPreco" style="-fx-background-color: white; -fx-border-color: #d0d0d0; -fx-border-width: 1; -fx-padding: 6;" />
               </children>
            </VBox>
            <VBox spacing="5.0">
               <children>
                  <Label style="-fx-text-fill: #333;" text="Estoque:">
                     <font>
                        <Font name="Segoe UI" size="11.0" />
                     </font>
                  </Label>
                  <TextField fx:id="txtEstoque" style="-fx-background-color: white; -fx-border-color: #d0d0d0; -fx-border-width: 1; -fx-padding: 6;" />
               </children>
            </VBox>
            <VBox spacing="5.0">
               <children>
                  <Label style="-fx-text-fill: #333;" text="Fornecedor:">
                     <font>
                        <Font name="Segoe UI" size="11.0" />
                     </font>
                  </Label>
                  <ComboBox fx:id="cbFornecedor" prefWidth="150.0" style="-fx-background-color: white; -fx-border-color: #d0d0d0; -fx-border-width: 1;" />
               </children>
            </VBox>
            <VBox spacing="5.0">
               <children>
                  <Label style="-fx-text-fill: #333;" text="Descrição:">
                     <font>
                        <Font name="Segoe UI" size="11.0" />
                     </font>
                  </Label>
                  <TextArea fx:id="txtDescricao" prefRowCount="2" style="-fx-background-color: white; -fx-border-color: #d0d0d0; -fx-border-width: 1;" />
               </children>
            </VBox>
            <HBox alignment="CENTER_RIGHT" spacing="10.0" style="-fx-padding: 10 0 0 0;">
               <children>
                  <Button fx:id="btnSalvar" mnemonicParsing="false" onAction="#handleSalvar" prefHeight="28.0" prefWidth="100.0" style="-fx-background-color: #5a9fd4; -fx-text-fill: white; -fx-cursor: hand; -fx-font-size: 12;" text="Salvar" />
                  <Button fx:id="btnCancelar" mnemonicParsing="false" onAction="#handleCancelar" prefHeight="28.0" prefWidth="100.0" style="-fx-background-color: #999; -fx-text-fill: white; -fx-cursor: hand; -fx-font-size: 12;" text="Cancelar" />
               </children>
            </HBox>
         </children>
      </VBox>
   </children>
</VBox>