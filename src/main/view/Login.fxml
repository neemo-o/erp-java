<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.effect.GaussianBlur?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.Circle?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<BorderPane xmlns:fx="http://javafx.com/fxml/1"
            xmlns="http://javafx.com/javafx/21"
            fx:controller="main.controllers.AuthController"
            prefWidth="800" prefHeight="600"
            minWidth="600" minHeight="450"
            maxWidth="1200" maxHeight="900"
            style="-fx-background-color: linear-gradient(to bottom, #cde8f5 0%, #87ceeb 70%, #4fa8d8 100%);">

    <top>
        <VBox alignment="CENTER" spacing="3" style="-fx-background-color: linear-gradient(to bottom, rgba(255,255,255,0.8) 0%, rgba(79,168,216,0.2) 100%); -fx-padding: 15;">
            <Text text="BEM-VINDO AO BANCO DE DADOS" fill="#2c5282" style="-fx-font-weight: 300;">
                <font>
                    <Font name="Segoe UI Light" size="28"/>
                </font>
                <effect>
                    <DropShadow color="rgba(44,82,130,0.3)" offsetY="2" radius="8"/>
                </effect>
            </Text>
            <Text text="Sistema Integrado de Supermercados" fill="#4a90a4" style="-fx-font-weight: 200;">
                <font>
                    <Font name="Segoe UI Light" size="14"/>
                </font>
            </Text>
        </VBox>
    </top>

    <center>
        <StackPane alignment="CENTER">
            <Circle radius="150" fill="rgba(255,255,255,0.1)">
                <effect>
                    <GaussianBlur radius="20"/>
                </effect>
            </Circle>

            <VBox spacing="10" alignment="CENTER" prefWidth="350" maxWidth="400" style="-fx-background-color: rgba(255,255,255,0.85); -fx-background-radius: 20; -fx-padding: 25;">
                <effect>
                    <DropShadow color="rgba(0,0,0,0.1)" offsetY="5" radius="15"/>
                </effect>

                <Text text="Acesso ao Sistema" fill="#2c5282" style="-fx-font-weight: 300;">
                    <font>
                        <Font name="Segoe UI Light" size="20"/>
                    </font>
                </Text>

                <TextField fx:id="documentField" promptText="Digite aqui seu CPF/CNPJ" style="-fx-background-color: white; -fx-background-radius: 10; -fx-border-color: #87ceeb; -fx-border-radius: 10; -fx-border-width: 2; -fx-font-size: 13; -fx-text-fill: #2c5282; -fx-prompt-text-fill: rgba(74,144,164,0.7); -fx-padding: 8;" prefHeight="38" prefWidth="280" maxWidth="300">
                    <effect>
                        <DropShadow color="rgba(135,206,235,0.3)" offsetY="3" radius="10"/>
                    </effect>
                </TextField>

                <Button fx:id="accessButton" text="Acessar" onAction="#handleAccessButton" style="-fx-background-color: linear-gradient(to bottom, #87ceeb 0%, #4fa8d8 100%); -fx-background-radius: 20; -fx-text-fill: white; -fx-font-size: 13; -fx-font-family: 'Segoe UI Light'; -fx-font-weight: 300; -fx-cursor: hand; -fx-padding: 8 30;" prefHeight="38" prefWidth="120">
                    <effect>
                        <DropShadow color="rgba(79,168,216,0.4)" offsetY="4" radius="12"/>
                    </effect>
                </Button>

                <Text text="Utilize apenas números, sem pontos ou traços" fill="#7bb3c7" style="-fx-font-weight: 200;">
                    <font>
                        <Font name="Segoe UI Light" size="11"/>
                    </font>
                </Text>

                <Text fx:id="statusMessage" text="" fill="#2c5282" visible="false">
                    <font>
                        <Font name="Segoe UI Light" size="11"/>
                    </font>
                </Text>

                <Text fill="#4fa8d8" onMouseClicked="#handleCadastroLink" strokeType="OUTSIDE" strokeWidth="0.0" style="-fx-font-weight: 300; -fx-cursor: hand; -fx-underline: true;" text="Não tem cadastro? Cadastrar empresa">
                    <font>
                        <Font name="Segoe UI Light" size="11"/>
                    </font>
                </Text>
            </VBox>
        </StackPane>
    </center>
</BorderPane>