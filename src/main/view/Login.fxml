<ScrollPane fitToHeight="true" fitToWidth="true" maxHeight="600.0" maxWidth="800.0" minHeight="450" minWidth="600" prefHeight="600" prefWidth="800" style="-fx-background: #b8dce8;" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="main.controllers.AuthController">
  <VBox alignment="TOP_CENTER" spacing="8.0" style="-fx-background-color: linear-gradient(to bottom, #e8f4f8 0%, #b8dce8 30%, #87ceeb 70%, #4fa8d8 100%);">
      <HBox alignment="CENTER_RIGHT" spacing="0" style="-fx-background-color: rgba(44,82,130,0.3); -fx-padding: 5 10;">
         <children>
            <Button fx:id="minimizeButton" prefHeight="9.0" prefWidth="45" style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-size: 16; -fx-cursor: hand; -fx-padding: 0 15;" text="__" />
            <Button fx:id="closeButton" prefHeight="25" prefWidth="45" style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-size: 14; -fx-cursor: hand; -fx-padding: 0 15;" text="✕" />
         </children>
      </HBox>
    
    <!-- Cabeçalho -->
    <VBox alignment="CENTER" spacing="3" style="-fx-background-color: rgba(255,255,255,0.9); -fx-background-radius: 15; -fx-padding: 20;">
      <effect>
        <DropShadow color="rgba(0,0,0,0.1)" offsetY="5" radius="15" />
      </effect>
      <Text fill="#2c5282" text="BEM-VINDO!">
        <font>
          <Font name="Segoe UI Light" size="32.0" />
        </font>
      </Text>
      <Text fill="#4a90a4" text="Sistema Integrado de Supermercados">
        <font>
          <Font name="Segoe UI Light" size="12" />
        </font>
      </Text>
    </VBox>

    <!-- Formulário de Login -->
    <VBox alignment="CENTER" maxWidth="582.0" minWidth="400" prefHeight="377.0" prefWidth="558.0" spacing="12" style="-fx-background-color: rgba(255,255,255,0.85); -fx-background-radius: 20; -fx-padding: 20;">
      <effect>
        <DropShadow color="rgba(0,0,0,0.1)" offsetY="8" radius="25" spread="0.2" />
      </effect>
      
      <Text fill="#2c5282" text="Acesso ao Sistema" wrappingWidth="191.0693359375">
        <font>
          <Font name="Segoe UI Light" size="24.0" />
        </font>
      </Text>

      <VBox alignment="TOP_CENTER" prefHeight="52.0" prefWidth="350.0" spacing="3">
        <Label text="CNPJ:" textFill="#4a90a4">
