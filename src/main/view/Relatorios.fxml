<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.chart.BarChart?>
<?import javafx.scene.chart.CategoryAxis?>
<?import javafx.scene.chart.NumberAxis?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<ScrollPane hbarPolicy="NEVER" maxHeight="600.0" maxWidth="1000.0" prefHeight="600.0" prefWidth="1000.0" 
    style="-fx-background: #f5f7fa; -fx-focus-color: transparent; -fx-faint-focus-color: transparent;" 
    vbarPolicy="NEVER" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" 
    fx:controller="main.controllers.RelatoriosController">
    <VBox alignment="CENTER" prefHeight="600.0" prefWidth="1000.0" spacing="15.0" 
        style="-fx-background-color: #f5f7fa; -fx-focus-color: transparent; -fx-faint-focus-color: transparent;">
        <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
        </padding>

        <!-- Cabeçalho -->
        <HBox alignment="CENTER" spacing="10.0" style="-fx-focus-color: transparent; -fx-faint-focus-color: transparent;">
            <ImageView fitHeight="22.0" fitWidth="22.0" preserveRatio="true">
                <Image url="@../resources/svg/chart-line-solid-full.svg" />
            </ImageView>
            <Text fill="#2c5282" text="Dashboard de Relatórios">
                <font>
                    <Font name="Segoe UI" size="18.0" />
                </font>
            </Text>
            <Region HBox.hgrow="ALWAYS" />
            <Button fx:id="btnAtualizar" mnemonicParsing="false" onAction="#handleAtualizar" prefHeight="32.0" prefWidth="120.0" 
                style="-fx-background-color: #5a9fd4; -fx-text-fill: white; -fx-cursor: hand; -fx-font-size: 12; -fx-focus-color: transparent; -fx-faint-focus-color: transparent;">
                <graphic>
                    <HBox alignment="CENTER" spacing="6.0">
                        <ImageView fitHeight="14.0" fitWidth="14.0" preserveRatio="true">
                            <Image url="@../resources/svg/arrows-rotate-solid-full.svg" />
                        </ImageView>
                        <Label style="-fx-text-fill: white;" text="Atualizar" />
                    </HBox>
                </graphic>
            </Button>
        </HBox>

        <!-- Filtros -->
        <VBox alignment="CENTER" spacing="10.0" 
            style="-fx-background-color: white; -fx-border-color: #d0d0d0; -fx-border-width: 1; -fx-padding: 15; -fx-focus-color: transparent; -fx-faint-focus-color: transparent;">
            <HBox alignment="CENTER_LEFT" spacing="15.0">
                <VBox spacing="5.0">
                    <Label style="-fx-text-fill: #666;" text="Período:">
                        <font><Font name="Segoe UI" size="11.0" /></font>
                    </Label>
                    <ComboBox fx:id="cbPeriodo" prefWidth="150.0" 
                        style="-fx-background-color: white; -fx-border-color: #d0d0d0; -fx-border-width: 1; -fx-focus-color: transparent; -fx-faint-focus-color: transparent;" />
                </VBox>

                <VBox spacing="5.0">
                    <Label style="-fx-text-fill: #666;" text="Data Inicial:">
                        <font><Font name="Segoe UI" size="11.0" /></font>
                    </Label>
                    <DatePicker fx:id="dpDataInicial" prefWidth="130.0" 
                        style="-fx-background-color: white; -fx-border-color: #d0d0d0; -fx-border-width: 1; -fx-focus-color: transparent; -fx-faint-focus-color: transparent;" />
                </VBox>

                <VBox spacing="5.0">
                    <Label style="-fx-text-fill: #666;" text="Data Final:">
                        <font><Font name="Segoe UI" size="11.0" /></font>
                    </Label>
                    <DatePicker fx:id="dpDataFinal" prefWidth="130.0" 
                        style="-fx-background-color: white; -fx-border-color: #d0d0d0; -fx-border-width: 1; -fx-focus-color: transparent; -fx-faint-focus-color: transparent;" />
                </VBox>

                <VBox alignment="BOTTOM_CENTER">
                    <Button fx:id="btnFiltrar" mnemonicParsing="false" onAction="#handleFiltrar" prefHeight="32.0" prefWidth="100.0" 
                        style="-fx-background-color: #7cb342; -fx-text-fill: white; -fx-cursor: hand; -fx-font-size: 12; -fx-focus-color: transparent; -fx-faint-focus-color: transparent;" 
                        text="Filtrar" />
                </VBox>
            </HBox>

            <Separator />

            <HBox alignment="CENTER_LEFT" spacing="10.0">
                <Label fx:id="lblPeriodoAtual" style="-fx-text-fill: #5a9fd4; -fx-font-weight: bold;" text="Período: Este Mês">
                    <font><Font name="Segoe UI Semibold" size="12.0" /></font>
                </Label>
                <Region HBox.hgrow="ALWAYS" />
                <Label fx:id="lblUltimaAtualizacao" style="-fx-text-fill: #999;" text="Última atualização: --">
                    <font><Font name="Segoe UI" size="10.0" /></font>
                </Label>
            </HBox>
        </VBox>

        <!-- Cards de Resumo -->
        <HBox alignment="CENTER" spacing="15.0" style="-fx-focus-color: transparent; -fx-faint-focus-color: transparent;">
            <!-- Card 1: Total Vendas -->
            <VBox alignment="CENTER" spacing="8.0" 
                style="-fx-background-color: white; -fx-border-color: #d0d0d0; -fx-border-width: 1; -fx-padding: 20; -fx-focus-color: transparent; -fx-faint-focus-color: transparent;" 
                HBox.hgrow="ALWAYS">
                <ImageView fitHeight="32.0" fitWidth="32.0" preserveRatio="true">
                    <Image url="@../resources/svg/coins-solid-full.svg" />
                </ImageView>
                <Label style="-fx-text-fill: #666;" text="Total de Vendas">
                    <font><Font name="Segoe UI Semibold" size="11.0" /></font>
                </Label>
                <Text fx:id="txtTotalVendas" fill="#2c5282" text="R$ 0,00">
                    <font><Font name="Segoe UI" size="18.0" /></font>
                </Text>
            </VBox>

            <!-- Card 2: Ticket Médio -->
            <VBox alignment="CENTER" spacing="8.0" 
                style="-fx-background-color: white; -fx-border-color: #d0d0d0; -fx-border-width: 1; -fx-padding: 20; -fx-focus-color: transparent; -fx-faint-focus-color: transparent;" 
                HBox.hgrow="ALWAYS">
                <ImageView fitHeight="32.0" fitWidth="32.0" preserveRatio="true">
                    <Image url="@../resources/svg/crosshairs-solid-full.svg" />
                </ImageView>
                <Label style="-fx-text-fill: #666;" text="Ticket Médio">
                    <font><Font name="Segoe UI Semibold" size="11.0" /></font>
                </Label>
                <Text fx:id="txtTicketMedio" fill="#2c5282" text="R$ 0,00">
                    <font><Font name="Segoe UI" size="18.0" /></font>
                </Text>
            </VBox>

            <!-- Card 3: Total Produtos -->
            <VBox alignment="CENTER" spacing="8.0" 
                style="-fx-background-color: white; -fx-border-color: #d0d0d0; -fx-border-width: 1; -fx-padding: 20; -fx-focus-color: transparent; -fx-faint-focus-color: transparent;" 
                HBox.hgrow="ALWAYS">
                <ImageView fitHeight="32.0" fitWidth="32.0" preserveRatio="true">
                    <Image url="@../resources/svg/box-solid-full.svg" />
                </ImageView>
                <Label style="-fx-text-fill: #666;" text="Total Produtos">
                    <font><Font name="Segoe UI Semibold" size="11.0" /></font>
                </Label>
                <Text fx:id="txtTotalProdutos" fill="#2c5282" text="0">
                    <font><Font name="Segoe UI" size="18.0" /></font>
                </Text>
            </VBox>

            <!-- Card 4: Total Clientes -->
            <VBox alignment="CENTER" spacing="8.0" 
                style="-fx-background-color: white; -fx-border-color: #d0d0d0; -fx-border-width: 1; -fx-padding: 20; -fx-focus-color: transparent; -fx-faint-focus-color: transparent;" 
                HBox.hgrow="ALWAYS">
                <ImageView fitHeight="32.0" fitWidth="32.0" preserveRatio="true">
                    <Image url="@../resources/svg/users-solid-full.svg" />
                </ImageView>
                <Label style="-fx-text-fill: #666;" text="Total Clientes">
                    <font><Font name="Segoe UI Semibold" size="11.0" /></font>
                </Label>
                <Text fx:id="txtTotalClientes" fill="#2c5282" text="0">
                    <font><Font name="Segoe UI" size="18.0" /></font>
                </Text>
            </VBox>

            <!-- Card 5: Fornecedores -->
            <VBox alignment="CENTER" spacing="8.0" 
                style="-fx-background-color: white; -fx-border-color: #d0d0d0; -fx-border-width: 1; -fx-padding: 20; -fx-focus-color: transparent; -fx-faint-focus-color: transparent;" 
                HBox.hgrow="ALWAYS">
                <ImageView fitHeight="32.0" fitWidth="32.0" preserveRatio="true">
                    <Image url="@../resources/svg/truck-solid-full.svg" />
                </ImageView>
                <Label style="-fx-text-fill: #666;" text="Fornecedores">
                    <font><Font name="Segoe UI Semibold" size="11.0" /></font>
                </Label>
                <Text fx:id="txtTotalFornecedores" fill="#2c5282" text="0">
                    <font><Font name="Segoe UI" size="18.0" /></font>
                </Text>
            </VBox>

            <!-- Card 6: Baixo Estoque -->
            <VBox alignment="CENTER" spacing="8.0" 
                style="-fx-background-color: white; -fx-border-color: #d0d0d0; -fx-border-width: 1; -fx-padding: 20; -fx-focus-color: transparent; -fx-faint-focus-color: transparent;" 
                HBox.hgrow="ALWAYS">
                <ImageView fitHeight="32.0" fitWidth="32.0" preserveRatio="true">
                    <Image url="@../resources/svg/triangle-exclamation-solid-full.svg" />
                </ImageView>
                <Label style="-fx-text-fill: #666;" text="Baixo Estoque">
                    <font><Font name="Segoe UI Semibold" size="11.0" /></font>
                </Label>
                <Text fx:id="txtProdutosBaixoEstoque" fill="#e57373" text="0">
                    <font><Font name="Segoe UI" size="18.0" /></font>
                </Text>
            </VBox>
        </HBox>

        <!-- Gráficos - Linha 1 -->
        <HBox alignment="CENTER" spacing="15.0" style="-fx-focus-color: transparent; -fx-faint-focus-color: transparent;">
            <!-- Gráfico Formas de Pagamento -->
            <VBox alignment="CENTER" spacing="10.0" 
                style="-fx-background-color: white; -fx-border-color: #d0d0d0; -fx-border-width: 1; -fx-padding: 15; -fx-focus-color: transparent; -fx-faint-focus-color: transparent;" 
                HBox.hgrow="ALWAYS">
                <Label style="-fx-text-fill: #2c5282; -fx-font-weight: bold;" text="Formas de Pagamento">
                    <font><Font name="Segoe UI Semibold" size="13.0" /></font>
                </Label>
                <BarChart fx:id="chartFormasPagamento" legendVisible="false" prefHeight="280.0" 
                    style="-fx-focus-color: transparent; -fx-faint-focus-color: transparent;">
                    <xAxis>
                        <CategoryAxis side="BOTTOM" fx:id="xAxisPagamento" />
                    </xAxis>
                    <yAxis>
                        <NumberAxis fx:id="yAxisPagamento" side="LEFT" />
                    </yAxis>
                </BarChart>
            </VBox>

            <!-- Gráfico Vendas por Mês -->
            <VBox alignment="CENTER" spacing="10.0" 
                style="-fx-background-color: white; -fx-border-color: #d0d0d0; -fx-border-width: 1; -fx-padding: 15; -fx-focus-color: transparent; -fx-faint-focus-color: transparent;" 
                HBox.hgrow="ALWAYS">
                <Label style="-fx-text-fill: #2c5282; -fx-font-weight: bold;" text="Evolução de Vendas">
                    <font><Font name="Segoe UI Semibold" size="13.0" /></font>
                </Label>
                <BarChart fx:id="chartVendasMes" legendVisible="false" prefHeight="280.0" 
                    style="-fx-focus-color: transparent; -fx-faint-focus-color: transparent;">
                    <xAxis>
                        <CategoryAxis side="BOTTOM" fx:id="xAxisVendas" />
                    </xAxis>
                    <yAxis>
                        <NumberAxis fx:id="yAxisVendas" side="LEFT" />
                    </yAxis>
                </BarChart>
            </VBox>
        </HBox>
    </VBox>
</ScrollPane>
